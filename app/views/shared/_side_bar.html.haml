.side
  .side__header
    .side__header__box
      .side__header__box__user-name
        = current_user.name
      .side__header__box__menu
        .side__header__box__menu__new--groups
          =link_to new_group_path do
            = fa_icon 'edit', class: "side__btn"
        .side__header__box__menu__edit--user
          =link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: "side__btn"
  .side__groups
    - current_user.groups.each do |group|
      .side__groups__group
        = link_to group_messages_path(group) do
          .side__groups__group__name
            = group.name
          .side__groups__group__message
            = group.show_last_message